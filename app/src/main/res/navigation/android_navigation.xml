    <fragment
        android:id="@+id/add_contact_fragment"
        android:name="com.collegeboys.offcourse.fragments.AddContactFragment"
        android:label="Start new conversation"
        tools:layout="@layout/fragment_add_contact" >
        <action
            android:id="@+id/action_add_contact_fragment_to_qr_displayer_fragment"
            app:destination="@id/qr_displayer_fragment" />
        <action
            android:id="@+id/action_add_contact_fragment_to_qr_scanner_fragment"
            app:destination="@id/qr_scanner_fragment" />
    </fragment>

