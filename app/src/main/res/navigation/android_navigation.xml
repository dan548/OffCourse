    <fragment
        android:id="@+id/chat_fragment"
        android:name="com.collegeboys.offcourse.fragments.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/qr_displayer_fragment"
        android:name="com.collegeboys.offcourse.fragments.QrDisplayerFragment"
        android:label="Your QR code"
        tools:layout="@layout/fragment_qr_displayer" >
        <action
            android:id="@+id/action_qr_displayer_fragment_to_qr_scanner_fragment"
            app:destination="@id/qr_scanner_fragment" />
        <action
            android:id="@+id/action_qr_displayer_fragment_to_chat_fragment"
            app:destination="@id/chat_fragment" />
    </fragment>

    <fragment
        android:id="@+id/qr_scanner_fragment"
        android:name="com.collegeboys.offcourse.fragments.QrScannerFragment"
        android:label="Scan companion's QR code"
        tools:layout="@layout/fragment_qr_scanner" >
        <action
            android:id="@+id/action_qr_scanner_fragment_to_chat_fragment"
            app:destination="@id/chat_fragment" />
        <action
            android:id="@+id/action_qr_scanner_fragment_to_qr_displayer_fragment"
            app:destination="@id/qr_displayer_fragment" />
    </fragment>

</navigation>